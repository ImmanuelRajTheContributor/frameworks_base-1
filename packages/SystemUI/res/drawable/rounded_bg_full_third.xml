        android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">
        <corners android:radius="12dp" />
        <solid android:color="@color/ringer_internal"/>
        </shape>
    </item>
    <item android:id="@android:id/background"
        android:top="0dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">
        <corners android:radius="12dp" />
        <solid android:color="@color/ringer_internal"/>
        </shape>
    </item>
</ripple>